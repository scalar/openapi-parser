{
  "name": "@scalar/openapi-types",
  "description": "The modern OpenAPI types",
  "keywords": [
    "openapi",
    "scalar",
    "swagger",
    "typescript"
  ],
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "version": "0.1.0",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "files": [
    "dist",
    "!dist/webpack-stats.json",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/openapi-parser.git",
    "directory": "packages/openapi-types"
  },
  "scripts": {
    "types:check": "tsc --noEmit --skipLibCheck",
    "build": "pnpm types:check && rollup -c --configPlugin typescript && pnpm types:build",
    "types:build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.19.2",
    "rollup-plugin-output-size": "^1.4.1",
    "rollup-plugin-webpack-stats": "^1.0.1"
  },
  "dependencies": {}
}
