{
  "compilerOptions": {
    "tsBuildInfoFile": null,
    "composite": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext"
  },
  "include": ["src/**/*", "tests/**/*"]
}
